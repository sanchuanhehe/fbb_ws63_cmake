config SAMPLE_SUPPORT_BLE_UART
    bool
    prompt "Enable the Sample of BLE_UART."
    default n
    depends on ENABLE_BEETLE_DEMO
    help
        This option means enable the sample of BLE_UART.

if SAMPLE_SUPPORT_BLE_UART
menu "BLE UART Sample Configuration"
    osource "application/samples/beetle_demo/beetle_ble_uart/Kconfig"
endmenu
endif

