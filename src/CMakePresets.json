{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ws63-base",
      "displayName": "WS63 Base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "FBB_TARGET": "ws63-liteos-app",
        "FBB_BUILD_LEVEL": "normal",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "ws63-debug",
      "displayName": "WS63 Debug",
      "inherits": "ws63-base",
      "cacheVariables": {
        "FBB_BUILD_LEVEL": "debug"
      }
    },
    {
      "name": "ws63-release",
      "displayName": "WS63 Release",
      "inherits": "ws63-base",
      "cacheVariables": {
        "FBB_BUILD_LEVEL": "release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ws63-build-debug",
      "displayName": "Build WS63 Debug",
      "configurePreset": "ws63-debug"
    },
    {
      "name": "ws63-build-release",
      "displayName": "Build WS63 Release",
      "configurePreset": "ws63-release"
    },
    {
      "name": "ws63-kconfig-menuconfig",
      "displayName": "Kconfig Menuconfig",
      "configurePreset": "ws63-debug",
      "targets": [
        "kconfig-menuconfig"
      ],
      "jobs": 1
    },
    {
      "name": "ws63-kconfig-header",
      "displayName": "Kconfig Generate Header",
      "configurePreset": "ws63-debug",
      "targets": [
        "kconfig-header"
      ],
      "jobs": 1
    },
    {
      "name": "ws63-postbuild-hso",
      "displayName": "Postbuild HSO DB",
      "configurePreset": "ws63-debug",
      "targets": [
        "postbuild-hso-db"
      ],
      "jobs": 1
    },
    {
      "name": "ws63-postbuild-rom-callback",
      "displayName": "Postbuild ROM Callback",
      "configurePreset": "ws63-debug",
      "targets": [
        "postbuild-rom-callback"
      ],
      "jobs": 1
    },
    {
      "name": "ws63-package-all",
      "displayName": "Package All",
      "configurePreset": "ws63-debug",
      "targets": [
        "package-all"
      ],
      "jobs": 1
    }
  ]
}